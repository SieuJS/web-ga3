generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Passenger {
  id        Int    @id @default(autoincrement())
  firstName String @unique
  lastName  String
}

model Product {
  id           Int    @id @default(autoincrement())
  productID    String
  productName  String
  productBrand String
  gender       String
  price        Float
  numImages    Int
  description  String
  primaryColor String
  image        String
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     String
}
